@using AsadMVC.Models;
@model EmployeeModel

<div>
    <h1>Display</h1>
    @Html.ValidationSummary(true, "", new {@class = "alert alert-danger"})

    <table class="table bg-dark text-white rounded-3">
        <tr>
            <th>Id</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Father</th>
            <td>@Model.Father</td>
        </tr>
        <tr>
            <th>Designation</th>
            <td>@Model.Designation</td>
        </tr>
        <tr>
            <th>Department</th>
            <td>@Model.Department</td>
        </tr>
    </table>


</div>